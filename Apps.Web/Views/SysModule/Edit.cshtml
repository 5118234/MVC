                    @Html.LabelFor(model => model.Enable):
                </td>
                <td style="width:310px;">
                    @Html.CheckBoxFor(model => model.Enable)
                </td>
            </tr>
            <tr>
                <td style="width:100px; text-align : right;">
                    @Html.LabelFor(model => model.IsLast):
                </td>
                <td style="width:310px;">
                    @Html.CheckBoxFor(model => model.IsLast)
                </td>
            </tr>
        </tbody>
    </table>
}


