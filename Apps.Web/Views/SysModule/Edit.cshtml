                    @Html.LabelFor(model => model.Url):
                </td>
                <td style="width:310px;">
                    @Html.EditorFor(model => model.Url)
                </td>
            </tr>
            <tr>
                <td style="width:100px; text-align : right;">
                    @Html.LabelFor(model => model.Iconic):
                </td>
                <td style="width:310px;">
                    @Html.EditorFor(model => model.Iconic)
                </td>
            </tr>
            <tr>
